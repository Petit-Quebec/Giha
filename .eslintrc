{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "semi": ["off", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-case-declarations": ["warn"],
    "eol-last": ["warn", "windows"]
  }
}
