{
  "name": "loom",
  "version": "1.0.0",
  "description": "a tool for weaving worlds 1.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec 'npm run babel-node'",
    "babel-node": "babel-node --inspect server.js",
    "lint": "eslint . --ext .js",
    "lint-fix": "eslint . --ext .js --fix && prettier --write .",
    "test": "jest --coverage",
    "e2e": "babel-node ./chatbot/discotest/endToEndTests.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Petit-Quebec/Giha.git"
  },
  "author": "Nick Grayson",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint-fix"
  },
  "bugs": {
    "url": "https://github.com/Petit-Quebec/Giha/issues"
  },
  "homepage": "https://github.com/Petit-Quebec/Giha#readme",
  "dependencies": {
    "canvas": "^2.8.0",
    "discord.js": "^12.5.3",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "merge-images": "^2.0.0",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.14"
  },
  "devDependencies": {
    "@babel/node": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-wildcard": "^7.0.0",
    "eslint": "^7.29.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1"
  },
  "nodemonConfig": {
    "comment": "chatbot/cmds/*.js",
    "ignore": [
      "chatbot/cmds/*.js",
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true
  }
}
